    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/commentUserImage"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:civ_border_color="#000000"
                app:civ_border_width="1dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline157"
                app:layout_constraintEnd_toStartOf="@+id/guideline158"
                app:layout_constraintStart_toStartOf="@+id/guideline66"
                app:layout_constraintTop_toTopOf="@+id/guideline67" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/guideline157"
                app:layout_constraintEnd_toStartOf="@+id/guideline158"
                app:layout_constraintStart_toStartOf="@+id/guideline66"
                app:layout_constraintTop_toTopOf="@+id/guideline67" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/firstLetterMessageTv"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="#893EF9"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toTopOf="@+id/guideline157"
                app:layout_constraintEnd_toStartOf="@+id/guideline158"
                app:layout_constraintStart_toStartOf="@+id/guideline66"
                app:layout_constraintTop_toTopOf="@+id/commentUserImage" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/commentUsernameTv"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:lines="1"
                android:textAlignment="viewStart"
                android:textColor="#893EF9"
                app:autoSizeMaxTextSize="35sp"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toTopOf="@+id/guideline160"
                app:layout_constraintEnd_toStartOf="@+id/guideline162"
                app:layout_constraintStart_toStartOf="@+id/guideline161"
                app:layout_constraintTop_toTopOf="@+id/guideline159" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/commentTimeTv"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="#762D2D2D"

                app:autoSizeMaxTextSize="30sp"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toTopOf="@+id/guideline160"
                app:layout_constraintEnd_toStartOf="@+id/guideline61"
                app:layout_constraintStart_toStartOf="@+id/guideline162"
                app:layout_constraintTop_toTopOf="@+id/guideline159" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/commentInfoTv"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textAlignment="viewStart"
                android:textColor="#515151"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toTopOf="@+id/guideline163"
                app:layout_constraintEnd_toStartOf="@+id/guideline164"
                app:layout_constraintStart_toStartOf="@+id/guideline161"
                app:layout_constraintTop_toBottomOf="@+id/commentUsernameTv" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline61"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.97" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline162"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.74" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline164"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.82" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline66"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.03" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline158"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.185" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline161"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.21" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline67"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.06" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline159"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.12" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline163"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.73" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline160"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.38" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline157"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.94" />


            <ImageView
                android:id="@+id/likeImage"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_thumb_up_black_24dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline163"
                app:layout_constraintEnd_toStartOf="@+id/guideline61"
                app:layout_constraintStart_toEndOf="@+id/commentInfoTv"
                app:layout_constraintTop_toTopOf="@+id/guideline160" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>